{
  "testTimeout": 30000,
  "rootDir": "..",
  "modulePaths": ["."],
  "moduleDirectories": [
    "node_modules",
    "src",
    "tests"
  ],
  "testEnvironment": "node",
  "testMatch": ["<rootDir>/test/unit/**/*.spec.ts"],
  "moduleFileExtensions": ["js", "ts", "json"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/test/env/setupEnv.unit.ts"]
}
